generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  Id          Int      @id @default(autoincrement())
  FileKey     String
  Title       String
  Description String
  UploadDate  DateTime @default(now())
}

model User {
  id                String      @id
  sessions          Session[]
  username          String
  password_hash     String
  two_factor_secret String?
  email             String?
  TempToken         TempToken[]
  EmailCode         EmailCode?
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model TempToken {
  token  String @id
  userId String
  user   User   @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model EmailCode {
  id        String   @id
  code      String
  userId    String   @unique
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
  email     String
  expiresAt DateTime
}
